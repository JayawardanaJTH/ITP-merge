@model IEnumerable<Project.Models.UserFeedback>

    @{
        ViewBag.Title = "Index";
        Layout = null;
    }

    <div class="content">


        @Html.ActionLink("Export to Word ", "Reports", new { ReportType = "Word" })
        @Html.ActionLink("Export to PDF ", "Reports", new { ReportType = "PDF" })
        <br />
        <br />
        <h1 class="agile-head text-center">My Feedbacks..</h1>


        <p>
            <button class="btn create" onclick="create()"> @Html.ActionLink("Create New", "Create", new { style = "color: white" })</button>
            <script>
                                      function create() {
                                          alert("Do you want to create a new feedback");

                                        }
            </script>
        </p>


        <div class="ActionLink">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Teacher)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Comment)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Teacher)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comment)
                        </td>

                        <td>
                            <button class="btn edit">@Html.ActionLink("Edit", "Edit", new { id = item.id })</button>
                            <button class="btn details">@Html.ActionLink("Details", "Details", new { id = item.id })</button>
                            <button class="btn delete">@Html.ActionLink("Delete", "Delete", new { id = item.id })</button>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>